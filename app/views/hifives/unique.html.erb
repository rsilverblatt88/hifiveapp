<%= form_for(@hifive) do |f| %>

  <div class="hi5-form">
    <div class="field">
      <%=f.text_field :to, class: "form-styling", :placeholder => "recipient" %><br>
    </div>
    <div class="field">
      <%=f.text_field :from, class: "form-styling", :placeholder => "from"  %><br>
    </div>
    <div class="field">
      <%=f.text_field :phone, class: "form-styling", :placeholder => "phone"  %><br>
    </div>
    <div class="field">
      <%=f.text_field :message, class: "form-styling", :placeholder => "message"  %><br>
    </div>
    <div class="field">
    <%= f.hidden_field(:user_id, :value => @user_id) %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
