<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Login Form</title>
      <link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" rel="stylesheet" media="screen">
      <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
      <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"></script>
      <link href='http://fonts.googleapis.com/css?family=Lato:100,300' rel='stylesheet' type='text/css'>
      <%= stylesheet_link_tag    'users' %>
    <!--[if lt IE 9]><script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
  </head>
<body>


  <div class="container">

    <div class="container top50">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <div class="item-1">
                  <div class="img-container">
                      <a href="#"><img src=<%=@user.image %> alt="" height= "200" width="200"/></a>
                    </div>
                    <div class="robin-key">
                      <p><%= @user.name %></p>

                        <ul>
                          <li><a href="mailto:<%= @user.email %>"><i class="glyphicon glyphicon-envelope"></i></a></li>
                            <li><a href=<%= edit_user_path(@user)%>><i class="glyphicon glyphicon-pencil"></i></a></li>
                        </ul>
                    </div>

                    <ul class="follow-list">
                      <li><a href="#"><i class="fa fa-heart"></i> <%= @hifives.length %> </a></li>
                        <li><a href="#"><i class="fa fa-users"></i> <%= @users.length %> </a></li>
                        <li><a href="#"><i class="fa fa-building-o"></i> 80</a></li>
                        <li><a href="#"><i class="fa fa-comments"></i> 120</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
            </div>
        </div>
    </div>


  <div class="row clearfix">
    <div class="all-users">
      <h1>WDI August - 2014</h1><button type="button" id="new-hi5-form">Send New Hi 5ive</button>
      <% @users.each do |user| %>
      <div class="user-buttons">
        <span>
          <p><%= user.name %></p>
          <%#= link_to 'Send hi5', new_hifife_path + "?phone=" + user.phone.to_s ,  :class => "send-hi5"  %>
          <button type="button" class="btn btn-default btn-lg send-hi5" data-user-id="<%= user.id %>" data-user-phone="<%= user.phone %>" data-user-name="<%= user.name %>" data-my-name="<%= @user.name %>"><span class="glyphicon glyphicon-thumbs-up"></span></button>
          Hi-5ives: <%= Hifive.where(phone: User.find_by(id: user.id).phone).length %>
        </span>
      </div>
      <% end %>
    </div>

    <div id="new-form">
    </div>

      <div class="hi-fives">
        <h1>Unique Hi 5s this Week: <%= @hifives.length %></h1>
          <% @hifives.each do |hifive| %>
            <span>
            <h1><%= hifive.from %></h1>
            <%= hifive.message %> </br>
            </span>
          <% end %>
      </div>
    </br>
  </div>
</div>


    <script>
      $(document).ready(users.show)
    </script>
  </body>
</html>
