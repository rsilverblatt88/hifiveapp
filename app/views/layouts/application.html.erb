<!DOCTYPE html>
<html>
<head>
  <title>Hifiveapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
      <% if session[:user_id] %>
        <%= link_to 'Hi5', user_path(session[:user_id]), class: 'logo' %>
      <% else %>
        <%= link_to 'Hi5', root_path, class: 'logo' %>
      <% end %>
    <ul class="nav">

      <% if session[:user_id] %>
        <%= link_to 'Logout', session_path, method: :delete %>
        <% else %>
      <li class="login"><%= link_to 'Log In', login_path %></li>
        <li class="signup"><%= link_to 'Sign Up', new_user_path %></li>
      <% end %>
    </ul>
  </nav>

<%= yield %>

</body>
</html>
